@model IEnumerable<ProjectRunAway.Models.Locations>

@{
    ViewData["Title"] = "AdminLocation";
}

<h1>Locations(Admin)</h1>

<p>
    <a asp-action="Create">Add a location</a>
</p>
<p>
    <a asp-action="Index">Back to main page</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationsId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationsId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarsAvailable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LocationsId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.LocationsId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.LocationsId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
