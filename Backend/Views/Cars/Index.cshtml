@model IEnumerable<ProjectRunAway.Models.Cars>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RunAway</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" />
    <!-- styles -->
    <link rel="stylesheet" href="~/css/style_general.css" />
    <link rel="stylesheet" href="~/css/style_cars.css">
</head>
<body>
    <!--preloader-->
    <!-- Preloader will be implemented here! -->
    <nav>
        <div class="nav-center">
            <!-- nav header -->
            <div class="nav-header">
                <img src="images/logo.png" class="logo" alt="Logo here" />
                <button class="nav-toggle">
                    <i class="fa fa-bars" style="font-size:36px"></i>
                    <!--a type for menu bar-->
                </button>
            </div>
            <!-- links -->
            <ul class="links">
                <li>
                    <a href="homePage.html">Home</a>
                </li>
                <li>
                    <a href="carsPage.html">Cars</a>
                </li>
                <li>
                    <a href="locationPage.html">Locations</a>
                </li>
                <li>
                    <a href="loginPage.html">Log in</a>
                </li>
                <li>
                    <a href="aboutusPage.html">About us</a>
                </li>
            </ul>
            <!-- social media -->
            <ul class="social-icons">
                <li>
                    <a href="https://www.twitter.com">
                        <i class="fab fa-twitter"></i>
                    </a>
                </li>
                <li>
                    <a href="https://www.linkedin.com">
                        <i class="fab fa-linkedin"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>


    <!-- List of cars section with filtering -->
    <div class="select-menu">
        <form asp-action="Index" method="get">
            <div class="select-btn">
                <span class="sBtn-text">Filter Options</span>
                <i class="bx bx-chevron-down"></i>
            </div>

            <ul class="options">
                <li class="option">
                    <input type="text" name="searchText" class="form-control" placeholder="Type make or model...">
                </li>
                <li class="option">
                    <select name="carMake" class="form-control">
                        <option value="">All Makes</option>
                        @foreach (var make in Model.Select(c => c.Manufacturer).Distinct())
                        {
                            <option value="@make">@make</option>
                        }
                    </select>
                </li>
                <li class="option">
                    <select name="carModel" class="form-control">
                        <option value="">All Models</option>
                        @foreach (var models in Model.Select(c => c.Model).Distinct())
                        {
                            <option value="@models">@models</option>
                        }
                    </select>
                </li>
                <!-- Additional Filters -->
                <li class="option"><input type="text" name="price" class="form-control" placeholder="Price..."></li>
                <li class="option"><input type="text" name="fuelType" class="form-control" placeholder="Fuel type..."></li>
                <li class="option"><input type="text" name="bodyType" class="form-control" placeholder="Body type..."></li>
                <li class="option"><input type="text" name="seatingCapacity" class="form-control" placeholder="Seating..."></li>
                <button type="submit" class="btn btn-primary">Filter</button>
            </ul>
        </form>
    </div>

    <script src="~/js/app_cars.js"></script>

    <table class="table">
        <thead>
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Price</th>
                <th>Fuel Type</th>
                <th>Capacity</th>
                <th>Body Type</th>
                <th>Seats</th>
                <th>User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Manufacturer</td>
                    <td>@item.Model</td>
                    <td>@item.PriceCar</td>
                    <td>@item.Fuel</td>
                    <td>@item.TankCapacity</td>
                    <td>@item.Type</td>
                    <td>@item.Seats</td>
                    <td>@item.Users.Username</td>
                    <td><a href="@Url.Action("", "Liabilities", new { carsId = item.CarsId })">Assurances</a></td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
