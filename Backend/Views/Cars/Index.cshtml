@model IEnumerable<ProjectRunAway.Models.Cars>

@{
    ViewData["Title"] = "Index";
}

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RunAway</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <!-- styles -->
    <link rel="stylesheet" href="~/css/style_cars.css">
</head>
<body>
    <!--preloader-->
    <!-- Preloader will be implemented here! -->
  

    <!-- List of cars section with filtering -->
    <div class="select-menu">
        <form asp-action="Index" method="get">
            <div class="select-btn">
                <span class="sBtn-text">Filter & Sort Options</span>
                <i class="bx bx-chevron-down"></i>
            </div>

            <ul class="options">
                <li class="option">
                    <input type="text" name="searchText" class="form-control" placeholder="Type make or model...">
                </li>
                <li class="option">
                    <select name="carMake" class="form-control">
                        <option value="">All Makes</option>
                        @foreach (var make in Model.Select(c => c.Manufacturer).Distinct())
                        {
                            <option value="@make">@make</option>
                        }
                    </select>
                </li>
                <li class="option">
                    <select name="carModel" class="form-control">
                        <option value="">All Models</option>
                        @foreach (var models in Model.Select(c => c.Model).Distinct())
                        {
                            <option value="@models">@models</option>
                        }
                    </select>
                </li>
                <!-- Additional Filters -->
                <li class="option"><input type="text" name="priceMin" class="form-control" placeholder="Price min..."></li>
                <li class="option"><input type="text" name="priceMax" class="form-control" placeholder="Price max..."></li>
                <li class="option"><input type="text" name="fuelType" class="form-control" placeholder="Fuel type..."></li>
                <li class="option"><input type="text" name="bodyType" class="form-control" placeholder="Body type..."></li>
                <li class="option"><input type="text" name="seatingCapacity" class="form-control" placeholder="Seating..."></li>

                <button type="submit" class="btn-primary" name="sortType" value=1>Show by Increasing</button>
                <button type="submit" class="btn-primary" name="sortType" value=2>Show by Decreasing</button>
                <button type="submit" class="btn-primary">Filter</button>
            </ul>
        </form>
    </div>
  
    <div class="section-center">
        @foreach (var item in Model)
        {
            <article class="menu-item">
                <a href="@Url.Action("", "Liabilities", new { carsId = item.CarsId })"><img style="height: 100%; border-radius: 1rem" src="@Html.DisplayFor(modelitem=>item.Image)" alt="Alternate Text" class="photo" alt="Image of @item.Model" /></a>
                <div class="item-info">
                    <header>
                        <h3>@item.Manufacturer</h3>
                        <h3 class="year">@item.Model</h3>
                    </header>
                    <h4>
                        <i class="fa-solid fa-car"></i> @item.Type
                        <i class="fa-solid fa-person"></i> @item.Seats
                        <i class="fa-solid fa-gas-pump"></i> @item.Fuel
                        <i class="fa-solid fa-euro-sign"></i> @item.PriceCar/day
                    </h4>
                    <p class="description" style="height: 50px; overflow: hidden; text-overflow: ellipsis;">
                        @item.Description
                    </p>
                    <button onclick="showCarDetails(@item.CarsId)">Show More</button>
                </div>
            </article>
        }
    </div>

    <!-- Modal Structure -->
    <div id="carDetailsModal" class="modal" style="display:none;">
        <div class="modal-content">
            <ul>
                <li>
                    <b style="font-size:30">
                        <span id="carName"></span>
                    </b>
                    <span> </span>
                    <span style="font-size:30" id="carModel"></span>
                </li>
                <li>
                    <img id="carImage">
                </li>
                <li>
                    <span>Description: </span>
                    <span id="carDetails"></span>
                </li>

                <span>This car is equipped with: </span>
                <ul style="list-style:disc; padding-inline-start: 20px;">
                    <li>
                        <span id="fuel"></span>
                        <span> Fuel</span>
                    </li>
                    <li>
                        <span id="fuelCapacity"></span>
                        <span> Liters Capacity</span>
                    </li>
                    <li>
                        <span id="gearType"></span>
                        <span> Gear System</span>
                    </li>
                    @* Features *@

                    <li>
                        <span>Horsepower: </span>
                        <span id="f2"></span>
                    </li>
                    <li>
                        <span>Sunroof: </span>
                        <span id="f3"></span>
                    </li>
                    <li>
                        <span>Virtual Cockpit: </span>
                        <span id="f1"></span>
                    </li>
                    <li>
                        <span>Cylindrical capacity: </span>
                        <span id="f4"></span>
                    </li>
                    <li>
                        <span>Headlights: </span>
                        <span id="f5"></span>
                    </li>
                    <li>
                        <span>Heated seats: </span>
                        <span id="f6"></span>
                    </li>
                    <li>
                        <span>Ventilated seats: </span>
                        <span id="f12"></span>
                    </li>
                    <li>
                        <span>Seats type: </span>
                        <span id="f11"></span>
                    </li>
                    <li>
                        <span>Seats material: </span>
                        <span id="f8"></span>
                    </li>
                    <li>
                        <span>Steering wheel heating: </span>
                        <span id="f10"></span>
                    </li>
                    <li>
                        <span>Air conditioner: </span>
                        <span id="f7"></span>
                    </li>
                    <li>
                        <span>Navigation: </span>
                        <span id="f9"></span>
                    </li>

                </ul>
            </ul>
            <button onclick="closeModal()">Close</button>
        </div>
        <div class="modal-overlay" onclick="closeModal()"></div>
    </div>

    <style>
        .modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: none;
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            background: white;
            padding: 20px;
            border-radius: 5px;
            z-index: 1000;
            width: 30%;
        }

        .modal-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }
    </style>

    <script src="~/js/app_cars.js"></script>
    <script src="~/js/car_details.js"></script>
</body>
</html>