<body>
    <!-- B Crypt de retinut! -->
    <header>
     
    </header>
    <div class="wrapper-login">
        <form asp-action="ResetPassword" asp-controller="Users" method="post">
            <div class="input-box">
                <input asp-for="Username" type="text" placeholder="Username" required>
                <i class='bx bx-user'></i>
            </div>
            <div class="input-box">
                <input asp-for="PersonalAnswer" type="text" placeholder="Answer to your security question" required>
            </div>
            <div class="input-box">
                <input asp-for="Password" type="password" placeholder="New Password" required>
                <i class="fa-solid fa-eye" onclick="togglePasswordVisibility();"></i>
            </div>
            <button type="submit" class="btn">Reset Password</button>
        </form>
    </div>
    <!--javascript-->
    <script src="~/js/app_login_create_Account.js"></script>
</body>

</html>